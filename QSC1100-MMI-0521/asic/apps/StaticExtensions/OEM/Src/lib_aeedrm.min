#----------------------------------------------------------------------------
# Digital Rights Management Agent (DRM) BREW EXTENSION
#----------------------------------------------------------------------------
AEEDRM_LIB_SOURCES = \
       OEMDRM.c                       
       
AEEDRM_LIB_OBJS :=  $(addprefix $(LIBDIR)/, $(AEEDRM_LIB_SOURCES:%.c=%.o)) 
$(AEEDRM_LIB_OBJS): APPFLAGS = -DBREW_STATIC_APP -DAEE_STATIC
      
vpath %.c $(BREW_STATIC_EXTENSIONS_OEM_SRC)

$(LIBDIR)/AEEDRM.lib : $(AEEDRM_LIB_OBJS)
	@echo ------------------------------------------------------------------
	@echo LIBRARY $@
	@if test -f $@; then rm -f $@; fi
	$(ARMAR) -r $@ $(AEEDRM_LIB_OBJS)
	@echo ------------------------------------------------------------------

LIBOBJECTS := $(AEEDRM_LIB_OBJS) $(LIBOBJECTS)
QCTLIBS := $(QCTLIBS) $(LIBDIR)/AEEDRM.lib

