#-------------------------------------------------------------------------------
# SDCC BSP
#-------------------------------------------------------------------------------

ifeq ($(ASIC), q1100)
  SDCC_BSP_PLATFORM = BSP_Q1100
else
  SDCC_BSP_PLATFORM = BSP_OTHER
endif

# ---------------------------------------------------------------------------
# BSP_Q100
# ---------------------------------------------------------------------------
ifeq ($(SDCC_BSP_PLATFORM), BSP_Q1100)
  SDCC_BSP_PATH=$(SDCC)/bsp/Q1100
endif

ifeq ($(SDCC_BSP_PLATFORM), BSP_OTHER)
ifeq ($(USES_FFA),yes)
  SDCC_BSP_PATH=$(SDCC)/bsp/other/ffa
else
  SDCC_BSP_PATH=$(SDCC)/bsp/other/surf
endif
endif


ifndef SDCC_BSP_PATH         
$(error Error SDCC BSP Directory Not Found)
endif

  SDCC_SOURCES += \
    sdcc_bsp.c

SDCC_BSP_INC = $(addprefix $(INCLUDE_PREFIX), $(SDCC)/bsp)
  vpath %.c $(SDCC_BSP_PATH)

