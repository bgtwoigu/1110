#-------------------------------------------------------------------------------
# AUDFMT Library
#-------------------------------------------------------------------------------

AUDFMT_LIB_SOURCES=\
	audfmt.c

AUDFMT_LIB_OBJS :=  $(addprefix $(LIBDIR)/, $(AUDFMT_LIB_SOURCES:%.c=%.o))       
vpath %.c $(AUDFMT)

$(LIBDIR)/audfmt.lib : $(AUDFMT_LIB_OBJS)
	@echo ------------------------------------------------------------------
	@echo LIBRARY $@
	@if test -f $@; then rm -f $@; fi
	$(ARMAR) -r $@ $(AUDFMT_LIB_OBJS)
	@echo ------------------------------------------------------------------
	       
LIBOBJECTS := $(AUDFMT_LIB_OBJS) $(LIBOBJECTS)
LIBRARIES := $(LIBRARIES) $(LIBDIR)/audfmt.lib
