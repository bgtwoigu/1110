vpath %.bci $(FMN2010_DIRS)
vpath %.bmp $(FMN2010_DIRS)
vpath %.mgm $(FMN2010_DIRS)

FMN2010_CONST_FILES = \
    $(notdir $(wildcard $(FMN2010_DIRS)/*.png)) \
    $(notdir $(wildcard $(FMN2010_DIRS)/*.bci)) \
    $(notdir $(wildcard $(FMN2010_DIRS)/*.bmp)) \
    $(notdir $(wildcard $(FMN2010_DIRS)/*.mid))
	
