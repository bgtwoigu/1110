######fpt005 application##########
ifeq ($(FPT005),yes)
FPT_DIRS:=$(STATIC_BREW_APP)/fpt005
FPT_PNG_DIRS:=$(STATIC_BREW_APP)/fpt005/icon
FPT_FMENU_DIRS:=$(STATIC_BREW_APP)/fpt005/fmenu
FPT_IMAGE_DIRS:=$(STATIC_BREW_APP)/fpt005/image


vpath %.png $(FPT_PNG_DIRS)
vpath %.png $(FPT_IMAGE_DIRS)
vpath %.bci $(FPT_IMAGE_DIRS)
vpath %.htm $(FPT_FMENU_DIRS)
vpath %.fml $(FPT_DIRS)


CONSTFILE_STATIC_BREW_ICON_APP_FPT005:=$(wildcard $(FPT_PNG_DIRS)/*.png)

CONSTFILE_STATIC_BREW_IMAGE_APP_FPT005:=$(wildcard $(FPT_IMAGE_DIRS)/*.png)
								  
CCONSTFILE_STATIC_BREW_ICON_APP_FILENAMES_FPT005:=$(notdir $(CONSTFILE_STATIC_BREW_ICON_APP_FPT005))#                                  
CONSTFILE_BIN_FILES+=$(foreach filename,$(CCONSTFILE_STATIC_BREW_ICON_APP_FILENAMES_FPT005),\
					 $(filename)|fs:/mod/fpt005/icon/$(filename))#
					 
CCONSTFILE_STATIC_BREW_IMAGE_APP_FILENAMES_FPT005:=$(notdir $(CONSTFILE_STATIC_BREW_IMAGE_APP_FPT005))#                                  
CONSTFILE_BIN_FILES+=$(foreach filename,$(CCONSTFILE_STATIC_BREW_IMAGE_APP_FILENAMES_FPT005),\
					 $(filename)|fs:/mod/fpt005/image/$(filename))#
																		

EFSFILE_FILES+=$(foreach filename,$(notdir $(wildcard $(FPT_DIRS)/*.hml)),fs:/mod/FPT_DIRS/$(filename))
EFSFILE_FILES+=$(foreach filename,$(notdir $(wildcard $(FPT_FMENU_DIRS)/*.htm)),fs:/mod/FPT_FMENU_DIRS/$(filename))
EFSFILE_FILES+=$(foreach filename,$(notdir $(wildcard $(FPT_IMAGE_DIRS)/*.bci)),fs:/mod/FPT_IMAGE_DIRS/$(filename))

CONSTFILE_FILES+=fpt005.mif|fs:/mif/fpt005.mif
STATIC_BREW_APP_LIB+=$(STATIC_BREW_APP)/fpt005/fpt005.o		


endif											

endif #ifeq ($(USES_FLEXI_STATICAPP),yes)
