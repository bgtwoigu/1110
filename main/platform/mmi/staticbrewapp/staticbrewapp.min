####app的开关
ifeq ($(USES_FLEXI_STATICAPP),yes)
ifeq ($(FOR_NASRANI_NOT_MUSLIM),yes)
NASRANI=yes
else
FMN2010=yes
endif

CAH006=yes

FPT005=yes
#俩个提供外部使用的全局量
#应用的o文件
STATIC_BREW_APP_LIB:=#
#应用的资源文件

#####nasrani application##########
ifeq ($(NASRANI),yes)
#todo something here   应用的名字添加
NASRANI_DIRS:=$(STATIC_BREW_APP)/nasrani

vpath %.bar $(NASRANI_DIRS)
vpath %.cfg $(NASRANI_DIRS)
vpath %.dat $(NASRANI_DIRS)

CONSTFILE_BIN_FILES+=nasrani.bar|fs:/mod/nasrani/nasrani.bar \
					 nasraniconfig.cfg|fs:/mod/nasrani/nasraniconfig.cfg \
					 nasranihomedefault.dat|fs:/mod/nasrani/nasranihomedefault.dat

CONSTFILE_FILES+=nasrani.mif|fs:/mif/nasrani.mif
STATIC_BREW_APP_LIB+=$(NASRANI_DIRS)/nasrani.o
endif

#####fmn2010 application##########
ifeq ($(FMN2010),yes)
#todo something here   应用的名字添加
FMN2010_DIRS:=$(STATIC_BREW_APP)/fmn2010
#todo something here如果是这种零散的资源文件文件也需要修改，这个就具体看情况了
vpath %.mif $(FMN2010_DIRS)
vpath %.png $(FMN2010_DIRS)
vpath %.mid $(FMN2010_DIRS)
vpath %.htm $(FMN2010_DIRS)
vpath %.bci $(FMN2010_DIRS)
vpath %.bmp $(FMN2010_DIRS)
vpath %.mgm $(FMN2010_DIRS)

#获取所有资源文件名,MGM文件是读写格式所以不能静态编译
CONSTFILE_STATIC_BREW_APP_TEMPS:=$(wildcard $(FMN2010_DIRS)/*.png) \
                                 $(wildcard $(FMN2010_DIRS)/*.bci) \
								 $(wildcard $(FMN2010_DIRS)/*.bmp) \
                                 $(wildcard $(FMN2010_DIRS)/*.mid)
                                     
CONSTFILE_STATIC_BREW_APP_FILENAMES_TEMPS:=$(notdir $(CONSTFILE_STATIC_BREW_APP_TEMPS))#                                  
CONSTFILE_BIN_FILES+=$(foreach filename,$(CONSTFILE_STATIC_BREW_APP_FILENAMES_TEMPS),\
					 $(filename)|fs:/mod/fmn2010/$(filename))#


EFSFILE_FILES+=$(foreach filename,$(notdir $(wildcard $(FMN2010_DIRS)/*.mgm)) $(notdir $(wildcard $(FMN2010_DIRS)/*.htm)),fs:/mod/fmn2010/$(filename))

CONSTFILE_FILES+=fmn2010.mif|fs:/mif/fmn2010.mif
STATIC_BREW_APP_LIB+=$(STATIC_BREW_APP)/fmn2010/fmn2010.o
endif

