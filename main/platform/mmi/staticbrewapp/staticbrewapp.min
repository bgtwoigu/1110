    $(foreach filename, $(FMN2010_CONST_FILES), $(filename)|fs:/mod/fmn2010/$(filename))
    
EFSFILE_FILES += \
    $(foreach filename, $(FMN2010_EFS_FILES), $(filename)|fs:/mod/fmn2010/$(filename))

CONSTFILE_FILES += \
    fmn2010.mif|fs:/mif/fmn2010.mif
    
STATIC_BREW_APP_LIB += \
    $(STATIC_BREW_APP)/fmn2010/fmn2010.o
endif

