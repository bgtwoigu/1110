FACEBOOK_EFS_FILES = \
	$(notdir $(wildcard $(FACEBOOK_IMG_DIRS)/*.png))  \
	$(notdir $(wildcard $(FACEBOOK_IMG_DIRS)/*.bci))  
   
            
#CONSTFILE_BIN_FILES += \
#	$(foreach filename, $(FACEBOOK_CONST_FILES), $(filename)|fs:/mod/fb11/$(filename))
	

    
EFSFILE_FILES += \
    up.htm|fs:/mod/fb11/htm/up.htm \
    $(foreach filename, $(FACEBOOK_EFS_FILES), $(filename)|fs:/mod/fb11/images/$(filename)) \
    fb11_menu.fml|fs:/mod/fb11/menu.fml
    
$(warning EFSFILE_FILES=$(EFSFILE_FILES))        

CONSTFILE_BIN_FILES+= \
	fb11.mod|fs:/mod/fb11/fb11.mod
