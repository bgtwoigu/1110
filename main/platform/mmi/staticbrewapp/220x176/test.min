vpath %.mod $(FACEBOOK_DIRS)
vpath %.fml $(FACEBOOK_DIRS)
vpath %.htm $(FACEBOOK_HTM_DIRS)
vpath %.bci $(FACEBOOK_IMG_DIRS)
