#####fgen application#####################################################################################################################################################
#todo something here   应用的名字添加
FGEN_DIRS:=$(STATIC_BREW_APP)/fgen
#todo something here如果是这种零散的资源文件文件也需要修改，这个就具体看情况了
vpath %.txt $(FGEN_DIRS)
vpath %.bar $(FGEN_DIRS)
vpath %.mod $(FGEN_DIRS)

FGEN_CONST_FILES = fgen.bar fgen.mod
	
FGEN_EFS_FILES =  $(notdir $(wildcard $(FGEN_DIRS)/*.txt)) 
   
	
CONSTFILE_BIN_FILES += \
    $(foreach filename, $(FGEN_CONST_FILES), $(filename)|fs:/mod/fgen/$(filename))
    
EFSFILE_FILES += \
    $(foreach filename, $(FGEN_EFS_FILES), $(filename)|fs:/mod/fgen/$(filename))

CONSTFILE_FILES += \
    fgen.mif|fs:/mif/fgen.mif
    
    
