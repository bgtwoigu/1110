#-------------------------------------------------------------------------------
# XMF Library
#-------------------------------------------------------------------------------

XMF_LIB_SOURCES=\
	xmf.c

XMF_LIB_OBJS :=  $(addprefix $(LIBDIR)/, $(XMF_LIB_SOURCES:%.c=%.o))       
vpath %.c $(XMF)

$(LIBDIR)/xmf.lib : $(XMF_LIB_OBJS)
	@echo ------------------------------------------------------------------
	@echo LIBRARY $@
	@if test -f $@; then rm -f $@; fi
	$(ARMAR) -r $@ $(XMF_LIB_OBJS)
	@echo ------------------------------------------------------------------
	       
LIBOBJECTS := $(XMF_LIB_OBJS) $(LIBOBJECTS)
LIBRARIES := $(LIBRARIES) $(LIBDIR)/xmf.lib
